[% USE flatten %]
[% overflow = "hidden" %]
[% scrolling = "no" %]
[% height = gadget.height || 180 %]
[% IF gadget.scrolling == "true" %]
    [% overflow = "auto" %]
    [% scrolling = "yes" %]
[% END %]
<iframe src="[% gadget.href %]"
        class="[% gadget.title | flatten %]"
        noresize="noresize"
        frameborder="0"
        border="0"
        [% "width=\"$width\"" IF width %]
        cellspacing="0"
        scrolling="[% scrolling %]"
        marginwidth="0"
        marginheight="0" 
        allowtransparency="true"
        id="[% gadget.id %]-iframe"
        style="overflow:[% overflow %];height:[% height %]px">
</iframe>
