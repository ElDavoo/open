[% USE html_encode %]
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
    <head>
        <base target="_blank"/>
        <link rel="stylesheet" href="[% share %]/css/gadget.css" type="text/css" media="screen" />

        <script>
            var msgs = [% as_json(messages) %];
            function load_content () {
                jQuery(function () {
                    jQuery('body').append(
                        jQuery('#encoded-content').text()
                    )
                    gadgets.util.runOnLoadHandlers();
                });
            }
        </script>
    </head>
    <body onLoad="document.loaded=true;">
        <div id="encoded-content" style="display:none">[% content | html_encode %]</div>
        [% INCLUDE element/js_loader
            scripts = features
            oncomplete = "load_content()"
        %]
    </body>
</html>
