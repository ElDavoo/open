[% USE html_encode %]
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
    <head>
        <base target="_blank"/>
        <link rel="stylesheet" href="[% share %]/css/gadget.css" type="text/css" media="screen" />

        <script>
            var msgs = [% as_json(messages) %];
            var data = [% as_json([content]) %];
            function load_content () {
                var html = data[0];
                jQuery("body").append(html);
                setTimeout(function () {
                    gadgets.util.runOnLoadHandlers();
                }, 1);
            }
        </script>
    </head>
    <body onLoad="document.loaded=true;">
        [% INCLUDE element/js_loader
            scripts = features
            oncomplete = "load_content()"
        %]
    </body>
</html>
