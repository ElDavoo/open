[%# @COPYRIGHT@ -%]
<table id="[% settings_table_id %]">
  <tr>
   <td>
     [% PROCESS users_listing
         label = loc('The following [*,_1,user was already a member,users were already members] of this Workspace:', users_already_present.size),
         users = users_already_present
         IF users_already_present.size;
        PROCESS users_listing
         label = loc('The following [*,_1,email address was,email addresses were] invalid:', invalid_addresses.size),
         users = invalid_addresses
         IF invalid_addresses.size;
        PROCESS users_listing
         label = loc('You can only invite people who share the [_1] email domain with you:', '<span style="color: red;">' _ domain _ '</span>'),
         users = wrong_domain
         IF wrong_domain.size;
        PROCESS users_listing
         label = loc('The following [*,_1,user was,users were] invited into this Workspace:', users_invited.size),
         users = users_invited
         IF !groups && checker.check_permission('admin_workspace') ;
        PROCESS users_listing
         label = loc('The following [*,_1,user was,users were] invited into the following Group(s):', users_invited.size),
         users = users_invited
         groups = groups
         IF groups && checker.check_permission('admin_workspace') ;
        PROCESS users_listing
         label = loc('Your request to invite the following [*,_1,user] has been sent:', users_invited.size),
         users = users_invited
         IF !checker.check_permission('admin_workspace') AND users_invited.size;
     %]
   </td>
  </tr>
 </table>

[% BLOCK users_listing %]
  <p style="font-weight: bold; margin-top: 5px">[% label %]</p>
  [% IF groups %]
    [% PROCESS groups_listing groups=groups %]
    <p style="font-weight: bold; margin-top: 5px">[% loc("Users") %]<p>
  [% END %]
  <ul>
    [% FOREACH user IN users %]
      <li style="font-family: monospace">[% user %]</li>
    [% END %]
  </ul>
[% END %]

[% BLOCK groups_listing %]
   <p style="font-weight: bold; margin-top: 5px">[% loc("Groups") %]<p>
   <ul>
   [% FOR group IN groups %]
       <li style="font-family: monospace">[% group.display_name %]</li>
   [% END %]
   </ul>
[% END %]

