    [% IF errors || messages %]
      <div id="errors-and-messages">
        [% FOR error IN errors %]
          [% IF error.type %]
            [% INCLUDE "errors/$error.type" %]
          [% ELSE %]
            <span class="error">[% error %]</span>
          [% END %]
        [% END %]
        [% FOR msg IN messages %]
          <span class="message">[% msg %]</span>
        [% END %]
      </div>
    [% END %]
