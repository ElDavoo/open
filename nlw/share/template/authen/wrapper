    <script type="text/javascript">
// This script will focus the login and choose_password pages
    function authen_focus () {
        var form = document.forms["login"];
        if (form) {
            var username = form.username;
            var password = form.password;
            if (username && password) {
                if ( username.value.length ) {
                    password.focus();
                }
                else {
                    username.focus();
                }
            }
            else if (password) {
                password.focus();
            }
        }
    }
    </script>

  <body onload="authen_focus()">
    <a name="page_top"></a>

    <div class="pane">
    <img id="logo" src="/static/2.11.6.1/images/logo-bar-18.gif" alt="logo"/>

    <div id="support_link"><a href="mailto:[% support_address | html %]">[% support_address | html %]</a></div>
 
